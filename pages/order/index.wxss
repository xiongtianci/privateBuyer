/* pages/order/index.wxss */
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
  padding: 0rpx;
  background-color: #f6f6f6;
}

.swiper-tab {
  width: 100%;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  box-sizing: border-box;
  background: #fff;
  justify-content: space-between;
}

.tab-item {
  width: 140rpx;
  font-size: 30rpx;
  display: inline-block;
  color: #333;
}

.on {
  color: #ef4836;
}

.swiper {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

swiper-item {
  padding-top: 20rpx;
}

.order_item{
  width: 100%;
  position: relative;
}
.shop_item{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.shop_img_info{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}

.shop_item_img{
  width: 120rpx;
  height: 120rpx;
  margin-left: 10rpx;
}
.shop_info{
  margin-left: 20rpx;
}
.shop_name{
  display: block;
  font-size: 30rpx;
}
.shop_specifications{
  display: block;
  font-size: 24rpx;
  color: #adadad;
}
.shop_item_change_css{
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  padding: 10rpx 0 20rpx;
  box-sizing: border-box;
}

.buy_iofo{
  width: 100%;
}
.buy_iofo text{
  display: block;
  text-align: right;
}
.price{
  font-size: 30rpx;
  color: #ef4836;
}
.original_price{
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.count{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.real_pay{
  font-size: 30rpx;
  margin-top: 50rpx;
}
.cancel_con{
  width: 100%;
  padding: 25rpx 0rpx 10rpx 400rpx;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.cancel_con_shouhou{
  width: 100%;
  padding: 25rpx 0rpx;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.tk_item{
  box-sizing: border-box;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}
.item_icon{
  display: block;
  width: 37rpx;
  height: 37rpx;
  margin-right: 25rpx;
}
.h_tit{
  font-size: 30rpx;
}
.tk_text{
  font-size: 24rpx;
  color: #999;
}
.thm_btn{
  width: 128rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #ef4836;
  font-size: 24rpx;
  color: #fff;
  padding: 0;
  margin: 0;
  border-radius: 8rpx;
}
.cancel_btn{
  width: 128rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: transparent;
  font-size: 24rpx;
  color: #666;
  padding: 0;
  margin: 0;
  border: 1rpx solid #666;
  border-radius: 8rpx;
}
.no_shop{
  display: block;
  font-size: 30rpx;
  text-align: center;
  color: #666;
}
/* --------------------- */
.goods_shop_info{
  justify-content: flex-start;
  padding: 10rpx 0rpx;
}
.shop_icon{
  display: block;
  width: 38rpx;
  height: 34rpx;
}
.shop_name_text{
  font-size: 30rpx;
  padding-left: 20rpx;
}