/* pages/pay/index.wxss */
page{
  height: 100%;
  overflow-y: scroll;
}
.container{
  height: 100%;
  padding: 20rpx 0 0 0;
  background-color: #f6f6f6;
  overflow-y: scroll;
}
.shop_item{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.shop_img_info{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  align-items: flex-start;
}

.shop_item_img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
}
.shop_info{
  margin-left: 20rpx;
}
.shop_name{
  display: block;
  font-size: 30rpx;
}
.shop_specifications{
  display: block;
  font-size: 24rpx;
  color: #adadad;
}
.shop_item_change_css{
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  padding: 10rpx 0 20rpx;
  box-sizing: border-box;
}

.buy_iofo{
  width: 100%;
}
.buy_iofo text{
  display: block;
  text-align: right;
}
.price{
  font-size: 30rpx;
  color: #ef4836;
}
.original_price{
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.count{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.real_pay{
  font-size: 30rpx;
  margin-top: 50rpx;
}

/* ------------- */
.goods_shop_info{
  justify-content: flex-start;
  padding: 10rpx 0rpx;
  border-bottom:1rpx solid #ddd; 
}
.shop_icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.shop_name_text{
  font-size: 30rpx;
  padding-left: 20rpx;
}
.buy_count{
  padding: 30rpx;
  background-color: #fff;
  justify-content: space-between;
  margin-top: 20rpx;
}

.count_con image{
  display: block;
  width: 60rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}
.count_number{
  display: block;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 30rpx;
  border-radius: 5rpx;
}

/* ------------------- */
.pd_con{
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

._pd_top{
  padding-left: 45rpx;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}

.pd_icon{
  display: block;
  width: 35rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.pd_lists{
  padding: 40rpx 30rpx 20rpx 85rpx;
  justify-content: space-between;
}

.pd_img_con{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* overflow: hidden; */
}
.lists_left .pd_img_con{
  margin-right: 30rpx;
}
.pd_img_con>image{
  border-radius: 50%;
}

.leader{
  position: relative;
  border: 2rpx solid #e0c40d;
}
.pd_leader{
  width: 57rpx;
  height: 28rpx;
  line-height: 28rpx;
  position: absolute;
  top: -20rpx;
  left: 20rpx;
  z-index: 999;
  background: #ffaa31;
  color: #c47910;
  text-align: center;
  border-radius: 10rpx;
  font-size: 18rpx;
}
.h_img{
  width: 100%;
}

.lists_right{
  width: 150rpx;
  height: 65rpx;
  line-height: 65rpx;
  border: 1rpx solid #ddd;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  border-radius: 15rpx;
}