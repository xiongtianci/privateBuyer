/* pages/refund/index.wxss */
page{
  height: 100%;
}
.container{
  height: 100%;
  padding: 20rpx 0rpx 0rpx;
  background-color: #f6f6f6;
}
.shop_item{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}
.item_title{
  font-size: 30rpx;
  color: #666;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.shop_img_info{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  align-items: flex-start;
}

.shop_item_img{
  width: 200rpx;
  height: 200rpx;
}
.shop_info{
  margin-left: 20rpx;
}
.shop_name{
  display: block;
  font-size: 30rpx;
}
.shop_specifications{
  display: block;
  font-size: 24rpx;
  color: #adadad;
}
.shop_item_change_css{
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}

.buy_iofo{
  width: 100%;
}
.buy_iofo text{
  display: block;
  text-align: right;
}
.price{
  font-size: 30rpx;
  color: #ef4836;
}
.original_price{
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.count{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.real_pay{
  font-size: 30rpx;
  margin-top: 50rpx;
}
.cancel_con{
  width: 100%;
  padding: 25rpx 0rpx 10rpx 400rpx;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.tk_text{
  font-size: 24rpx;
  color: #999;
}

.tk_con{
  width: 100%;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  margin-top: 20rpx;
}
.tk_con_item{
  padding: 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}
.tk_item{
  box-sizing: border-box;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}
.item_icon{
  display: block;
  width: 37rpx;
  height: 37rpx;
  margin-right: 25rpx;
}
.arrows_right{
  width: 19rpx;
  height: 33rpx;
}
.text_con text{
  display: block;
}
.h_tit{
  font-size: 30rpx;
}
.h_text{
  font-size: 24rpx;
  color: #999;
}
/* ------------------- */
.tips_block{
  width: 570rpx;
  margin: 120rpx auto 0;
}
.tips_tit{
  font-size: 30rpx;
  font-weight: bold;
}
.apply_tips{
  font-size: 28rpx;
  color: #999;
}
.apply_btn{
  width: 160rpx;
  height: 55rpx;
  line-height: 55rpx;
  background-color: #eeeeee;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-left: 375rpx;
}